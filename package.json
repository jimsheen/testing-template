{
    "name": "typescript-library-template",
    "version": "0.0.1",
    "description": "A template for a library written in typescript",
    "license": "UNLICENSED",
    "scripts": {
        "build": "tsc",
        "test": "jest --coverage --verbose",
        "test:watch": "yarn test -- --watchAll",
        "adr": "log4brains adr new",
        "prepare": "husky install",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "yarn lint --fix",
        "release": "standard-version --no-verify",
        "release:dry-run": "yarn release --dry-run"
    },
    "engines": {
        "yarn": "^1.22",
        "node": ">=16.0.0"
    },
    "dependencies": {},
    "devDependencies": {
        "@commitlint/cli": "^16.0.1",
        "@commitlint/config-conventional": "^16.0.0",
        "@types/chai": "4.3.0",
        "@types/eslint": "8.2.1",
        "@types/jest": "^27.4.0",
        "@types/node": "16.11.19",
        "@typescript-eslint/eslint-plugin": "^5.9.0",
        "@typescript-eslint/parser": "^5.9.0",
        "chai": "4.3.4",
        "standard-version": "^9.3.2",
        "ts-node": "10.4.0",
        "typescript": "^4.5.4",
        "log4brains": "^1.0.0-beta.11",
        "husky": "^7.0.0",
        "jest": "^27.0.6",
        "ts-jest": "^27.0.3",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.5.1",
        "lint-staged": "^12.1.5"
    }
}